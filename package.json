{
  "name": "resume-matcher-backend",
  "version": "1.0.0",
  "description": "Backend service for resume matching and RAG-based chat",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --watch src src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/config/data-source.ts",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/config/data-source.ts migrations/",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "typeorm": "^0.3.17",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.1",
    "pdf-parse": "^1.1.1",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.8.10",
    "@types/multer": "^1.4.11",
    "@types/pdf-parse": "^1.1.4",
    "@types/pg": "^8.10.7",
    "@types/cors": "^2.8.17",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0"
  },
  "keywords": [
    "resume",
    "matching",
    "rag",
    "chat",
    "pgvector"
  ],
  "author": "",
  "license": "MIT"
}
